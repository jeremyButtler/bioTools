
CC=cc
LD=cc
coreCFLAGS= -O3 -std=c89 -static -Wall -Wextra -Wpedantic -Wundef -Waggregate-return -Wwrite-strings -Wstrict-prototypes -Wpointer-arith -Wshadow -Wunreachable-code -Winit-self -c
CFLAGS=-DNONE
NAME=edClust
PREFIX=/usr/local/bin
O=o.static

genClust=../genClust
genBio=../genBio
genLib=../genLib

objFiles= \
   $(genClust)/edClust.$O \
   $(genBio)/seqST.$O \
   $(genLib)/charCp.$O \
   $(genClust)/clustST.$O \
   $(genBio)/samEntry.$O \
   $(genLib)/fileFun.$O \
   $(genLib)/ulCp.$O \
   $(genLib)/strAry.$O \
   $(genLib)/numToStr.$O \
   $(genLib)/base10str.$O \
   $(genBio)/tbCon.$O \
   $(genBio)/edDist.$O \
   mainEdClust.$O

$(NAME): mainEdClust.$O
	$(LD) -o $(NAME) $(objFiles)

mainEdClust.$O: \
	mainEdClust.c \
	$(genClust)/edClust.$O \
	$(genBio)/seqST.$O \
	$(genLib)/charCp.$O \
	../bioTools.h \
	../genLib/endLine.h \
	../genBio/tbConDefs.h
		$(CC) -o mainEdClust.$O \
			$(CFLAGS) $(coreCFLAGS) mainEdClust.c

$(genClust)/edClust.$O: \
	$(genClust)/edClust.c \
	$(genClust)/edClust.h \
	$(genClust)/clustST.$O
		$(CC) -o $(genClust)/edClust.$O \
			$(CFLAGS) $(coreCFLAGS) \
			$(genClust)/edClust.c


$(genBio)/seqST.$O: \
	$(genBio)/seqST.c \
	$(genBio)/seqST.h \
	$(genLib)/fileFun.$O
		$(CC) -o $(genBio)/seqST.$O \
			$(CFLAGS) $(coreCFLAGS) \
			$(genBio)/seqST.c

$(genLib)/charCp.$O: \
	$(genLib)/charCp.c \
	$(genLib)/charCp.h
		$(CC) -o $(genLib)/charCp.$O \
			$(CFLAGS) $(coreCFLAGS) \
			$(genLib)/charCp.c

$(genClust)/clustST.$O: \
	$(genClust)/clustST.c \
	$(genClust)/clustST.h \
	$(genBio)/samEntry.$O \
	$(genBio)/tbCon.$O \
	$(genBio)/edDist.$O \
	$(genLib)/genMath.h
		$(CC) -o $(genClust)/clustST.$O \
			$(CFLAGS) $(coreCFLAGS) \
			$(genClust)/clustST.c


$(genBio)/samEntry.$O: \
	$(genBio)/samEntry.c 	$(genBio)/samEntry.h \
	$(genLib)/fileFun.$O \
	$(genLib)/strAry.$O \
	$(genLib)/base10str.$O \
	$(genLib)/numToStr.$O \
	$(genBio)/ntTo5Bit.h \
	$(genLib)/endLine.h
		$(CC) -o $(genBio)/samEntry.$O \
			$(CFLAGS) $(coreCFLAGS) \
			$(genBio)/samEntry.c

$(genLib)/fileFun.$O: \
	$(genLib)/fileFun.c \
	$(genLib)/fileFun.h \
	$(genLib)/ulCp.$O
		$(CC) -o $(genLib)/fileFun.$O \
			$(CFLAGS) $(coreCFLAGS) \
			$(genLib)/fileFun.c

$(genLib)/ulCp.$O: \
	$(genLib)/ulCp.c \
	$(genLib)/ulCp.h
		$(CC) -o $(genLib)/ulCp.$O \
			$(CFLAGS) $(coreCFLAGS) \
			$(genLib)/ulCp.c

$(genLib)/strAry.$O: \
	$(genLib)/strAry.c \
	$(genLib)/strAry.h \
	$(genLib)/ulCp.$O
		$(CC) -o $(genLib)/strAry.$O \
			$(CFLAGS) $(coreCFLAGS) \
			$(genLib)/strAry.c

$(genLib)/numToStr.$O: \
	$(genLib)/numToStr.c \
	$(genLib)/numToStr.h
		$(CC) -o $(genLib)/numToStr.$O \
			$(CFLAGS) $(coreCFLAGS) \
			$(genLib)/numToStr.c

$(genLib)/base10str.$O: \
	$(genLib)/base10str.c \
	$(genLib)/base10str.h
		$(CC) -o $(genLib)/base10str.$O \
			$(CFLAGS) $(coreCFLAGS) \
			$(genLib)/base10str.c

$(genBio)/tbCon.$O: \
	$(genBio)/tbCon.c \
	$(genBio)/tbCon.h \
	$(genBio)/samEntry.$O \
	$(genBio)/tbConDefs.h \
	$(genLib)/genMath.h \
	$(genLib)/endLine.h
		$(CC) -o $(genBio)/tbCon.$O \
			$(CFLAGS) $(coreCFLAGS) \
			$(genBio)/tbCon.c

$(genBio)/edDist.$O: \
	$(genBio)/edDist.c \
	$(genBio)/edDist.h \
	$(genBio)/samEntry.$O \
	$(genBio)/seqST.$O \
	$(genLib)/genMath.h \
	$(genLib)/endLine.h
		$(CC) -o $(genBio)/edDist.$O \
		$(CFLAGS) $(coreCFLAGS) \
		$(genBio)/edDist.c

install:
	mv $(NAME) $(PREFIX)
	chmod a+x $(PREFIX)/$(NAME)

clean:
	rm $(objFiles)
